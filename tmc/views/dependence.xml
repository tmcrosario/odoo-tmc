<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="dependence_list_action">
        <field name="name">Dependences</field>
        <field name="res_model">tmc.dependence</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_tmc_dependence_tree"
            model="ir.ui.view">
        <field name="name">tmc.dependence.tree</field>
        <field name="model">tmc.dependence</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="abbreviation" />
                <field name="in_actual_nomenclator" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_tmc_dependence_form"
            model="ir.ui.view">
        <field name="name">tmc.dependence.form</field>
        <field name="model">tmc.dependence</field>
        <field name="arch"
               type="xml">
            <form duplicate="0">
                <sheet>
                    <h2>
                        <field name="display_name"
                            attrs="{'invisible':[('name','=',False)]}"/>
                    </h2>
                    <group>
                        <group>
                            <field name="name"
                                   class="oe_edit_only" />
                            <field name="abbreviation" />
                        </group>
                    </group>
                    <notebook>
                        <page name="document_types"
                              string="Document Types">
                            <field name="document_type_ids" />
                        </page>
                        <page name="systems"
                              string="Systems">
                            <field name="system_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record model="ir.ui.view"
            id="dependence_filter_view">
        <field name="name">tmc.dependence.filter</field>
        <field name="model">tmc.dependence</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="name" />
                <field name="abbreviation" />
                <filter string="Actual Nomenclator"
                        name="filter_actual_nomenclator"
                        domain="[('in_actual_nomenclator', '=', True)]" />
            </search>
        </field>
    </record>

</odoo>
