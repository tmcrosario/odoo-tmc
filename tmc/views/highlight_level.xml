<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window" id="highlight_level_list_action">
        <field name="name">Highlight Levels</field>
        <field name="res_model">tmc.highlight_level</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_highlight_level_tree" model="ir.ui.view">
        <field name="name">tmc.highlight_level.tree</field>
        <field name="model">tmc.highlight_level</field>
        <field name="arch" type="xml">
            <tree string="Highlight Level" default_order="priority desc">
                <field name="name" />
                <field name="color" widget="color" />
                <field name="priority" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_highlight_level_form" model="ir.ui.view">
        <field name="name">tmc.highlight_level.form</field>
        <field name="model">tmc.highlight_level</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="color" widget="color" />
                            <field name="priority" />
                        </group>
                    </group>
                    <group>
                        <field name="details" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
