<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- SEARCH VIEW -->
    <record id="document_topic_search_view"
            model="ir.ui.view">
        <field name="name">tmc.document_topic.search</field>
        <field name="model">tmc.document_topic</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="name"
                       search_domain="['|', ('name', '=', self)]" />
                <field name="parent_id"
                       search_domain="['|', ('parent_id', '=', self)]" />
                <filter string="Importante"
                        name="filter_important"
                        domain="[('important', '=', True)]" />
                <group expand="True">
                    <filter name="group_by_parent_id"
                            string="Tema Principal"
                            context="{'group_by':'parent_id'}" />
                </group>
            </search>
        </field>
    </record>

    <!-- FORMVIEW -->
    <record id="view_document_topic_form"
            model="ir.ui.view">
        <field name="name">tmc.document_topic.form</field>
        <field name="model">tmc.document_topic</field>
        <field name="arch"
               type="xml">
            <form>
                <header>
                </header>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="parent_id"
                               attrs="{'invisible':[('parent_id','=', False)]}" />
                    </group>
                    <group>
                        <field name="important" />
                        <field name="color" />
                    </group>
                    <notebook attrs="{'invisible':[('parent_id','!=', False)]}">
                        <page name="secondary_topic_ids"
                              string="Secondary Topics">
                            <field name="child_ids" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <!-- TREEVIEW -->
    <record id="document_main_topic_tree_view"
            model="ir.ui.view">
        <field name="name">tmc.document_topic.tree</field>
        <field name="model">tmc.document_topic</field>
        <field name="arch"
               type="xml">
            <tree colors="gray:important==False">
                <field name="name" />
                <field name="important"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- TREEVIEW -->
    <record id="document_secondary_topic_tree_view"
            model="ir.ui.view">
        <field name="name">tmc.document_topic.tree</field>
        <field name="model">tmc.document_topic</field>
        <field name="arch"
               type="xml">
            <tree colors="gray:important==False"
                  default_order="parent_id">
                <field name="parent_id"
                       widget="many2one_unclickable" />
                <field name="name" />
                <field name="important"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="main_topic_list_action"
            model="ir.actions.act_window">
        <field name="name">Main Topics</field>
        <field name="res_model">tmc.document_topic</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"
               ref="document_main_topic_tree_view" />
        <field name="context">{'search_default_filter_important': True }</field>
        <field name="domain">[('parent_id', '=', False)]</field>
    </record>

    <!-- WINDOW ACTION -->
    <record id="secondary_topic_list_action"
            model="ir.actions.act_window">
        <field name="name">Secondary Topics</field>
        <field name="res_model">tmc.document_topic</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id"
               ref="document_secondary_topic_tree_view" />
        <field name="search_view_id"
               ref="document_topic_search_view" />
        <field name="context">{'search_default_group_by_parent_id': True, 'search_default_filter_important': True }</field>
        <field name="domain">[('parent_id', '!=', False)]</field>
    </record>

</odoo>