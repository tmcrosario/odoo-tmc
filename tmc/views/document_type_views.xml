<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record id="document_type_action_form"
        model="ir.actions.act_window">
        <field name="name">Document Types</field>
        <field name="res_model">tmc.document_type</field>
        <field name="view_mode">tree</field>
    </record>

    <!-- TREE VIEW -->
    <record id="document_type_view_tree"
        model="ir.ui.view">
        <field name="name">tmc.document_type.view.tree</field>
        <field name="model">tmc.document_type</field>
        <field name="arch"
            type="xml">
            <tree>
                <field name="name"
                    string="Document Type" />
                <field name="abbreviation" />
            </tree>
        </field>
    </record>

</odoo>
