<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record id="hr_office_action_form" 
        model="ir.actions.act_window">
        <field name="name">Office</field>
        <field name="res_model">tmc.hr.office</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- FORM VIEW -->
    <record id="hr_office_view_form" 
        model="ir.ui.view">
        <field name="name">tmc.hr.office.view.form</field>
        <field name="model">tmc.hr.office</field>
        <field name="arch" 
            type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name" 
                            class="oe_edit_only" />
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="manager_id" />
                        <field name="parent_id" />
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="employee_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="email" />
                                    <field name="internal_number" />
                                    <field name="employee_job_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
