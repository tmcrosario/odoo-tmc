<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="dependence_order_list_action">
        <field name="name">Dependence Order</field>
        <field name="res_model">tmc.dependence_order</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{ 'search_default_filter_actual_nomenclator': True, 'search_default_group_by_parent_id': True }
        </field>
        <field name="domain">[('parent_id', '!=', False), (u'parent_id', u'not ilike', u'ADMINISTRACI\xd3N CENTRAL')]</field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_tmc_dependence_order_tree"
            model="ir.ui.view">
        <field name="name">tmc.dependence_order.tree</field>
        <field name="model">tmc.dependence_order</field>
        <field name="arch"
               type="xml">
            <tree fonts="bold:parent_name in [u'ADMINISTRACI\xd3N CENTRAL', u'ORGANISMOS DESCENTRALIZADOS', u'INSTITUCIONES DE SEGURIDAD SOCIAL', u'EMPRESAS, SOCIEDADES Y OTROS ENTES DEL ESTADO', False]">
                <field name="code" />
                <field name="name" />
                <field name="abbreviation" />
                <field name="institutional_classifier_ids" />
                <field name="parent_name"
                       invisible="True" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_tmc_dependence_order_form"
            model="ir.ui.view">
        <field name="name">tmc.dependence_order.form</field>
        <field name="model">tmc.dependence_order</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="parent_id" />
                            <field name="dependence_id" class="oe_edit_only"/>
                            <field name="name" />
                        </group>
                        <group>
                            <field name="code" />
                            <field name="abbreviation" />
                        </group>
                        <group>
                            <field name="institutional_classifier_ids"
                                   widget="many2many_tags" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record model="ir.ui.view"
            id="dependence_order_filter_view">
        <field name="name">tmc.dependence_order.filter</field>
        <field name="model">tmc.dependence_order</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="code" />
                <field name="name" />
                <field name="abbreviation" />
                <field name="institutional_classifier_ids" />
                <group string="Group By">
                    <filter name="group_by_parent_id"
                            string="Institutional Unit"
                            context="{'group_by': 'parent_id'}" />
                </group>
                <filter string="Actual Nomenclator"
                        name="filter_actual_nomenclator"
                        domain="[('in_actual_nomenclator', '=', True)]" />
            </search>
        </field>
    </record>


</odoo>