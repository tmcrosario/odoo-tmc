<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="tmc_hr_employee_list_action">
        <field name="name">Employees</field>
        <field name="res_model">tmc.hr.employee</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            { 'search_default_group_by_office_id': True}
        </field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_tmc_hr_employee_tree"
            model="ir.ui.view">
        <field name="name">tmc.hr.employee.tree</field>
        <field name="model">tmc.hr.employee</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="name" />
                <field name="email" />
                <field name="internal_number" />
                <field name="employee_job_id"
                       widget="many2one_unclickable" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_tmc_hr_employee_form"
            model="ir.ui.view">
        <field name="name">tmc.hr.employee.form</field>
        <field name="model">tmc.hr.employee</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box"
                         name="button_box">
                        <button name="toggle_active"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-archive"
                                groups="tmc.group_personal,tmc.group_manager">
                                <field name="active" widget="boolean_button"
                                    options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <label for="name"
                               class="oe_edit_only" />
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <field name="employee_title_ids"
                           widget="many2many_tags"
                           options="{'no_create_edit': True}" />
                    <group>
                        <group>
                            <field name="email"
                                   widget="email" />
                            <field name="internal_number" />
                        </group>
                    </group>
                    <group>
                        <group string="Position">
                            <field name="employee_job_id" />
                            <field name="office_id" />
                        </group>
                        <group string="Administration"
                               groups="tmc.group_personal,tmc.group_manager">
                            <field name="docket_number" />
                            <field name="admission_date" />
                            <field name="bank_account_number" />
                            <field name="bank_branch" />
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record id="view_tmc_hr_employee_search"
            model="ir.ui.view">
        <field name="name">tmc.hr.employee.search</field>
        <field name="model">tmc.hr.employee</field>
        <field name="arch"
               type="xml">
            <search>
                <group>
                    <filter name="group_by_office_id"
                            string="Office"
                            context="{'group_by':'office_id'}" />
                </group>
            </search>
        </field>
    </record>

</odoo>
