<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- TREE VIEW -->
    <record id="view_highlight_tree" model="ir.ui.view">
        <field name="name">tmc.highlight.tree</field>
        <field name="model">tmc.highlight</field>
        <field name="priority">5</field>
        <field name="arch" type="xml">
            <tree string="Highlights" default_order="applicable, create_date" colors="gray:applicable==False;red:color=='red';goldenrod:color=='yellow'">
                <field name="comment" />
                <field name="highlight_level_id" />
                <field name="color" invisible="True" />
                <field name="create_uid" readonly="True" />
                <field name="write_uid" readonly="True" />
                <field name="create_date" readonly="True" />
                <field name="applicable" invisible="True" />
            </tree>
        </field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_highlight_form" model="ir.ui.view">
        <field name="name">tmc.highlight.form</field>
        <field name="model">tmc.highlight</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="highlight_level_id" />
                        </group>
                    </group>
                    <group>
                        <field name="comment" />
                    </group>
                    <group>
                        <field name="applicable" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
