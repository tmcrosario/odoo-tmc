<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="tmc_hr_office_list_action">
        <field name="name">Office</field>
        <field name="res_model">tmc.hr.office</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
    </record>

    <!-- FORM VIEW -->
    <record id="view_tmc_hr_office_form"
            model="ir.ui.view">
        <field name="name">tmc.hr.office.form</field>
        <field name="model">tmc.hr.office</field>
        <field name="arch"
               type="xml">
            <form>
                <sheet>
                    <div class="oe_title">
                        <label for="name"
                               class="oe_edit_only" />
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="manager_id" />
                        <field name="parent_id" />
                    </group>
                    <notebook>
                        <page string="Members">
                            <field name="employee_ids">
                                <tree>
                                    <field name="name" />
                                    <field name="email" />
                                    <field name="internal_number" />
                                    <field name="employee_job_id" />
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

</odoo>
