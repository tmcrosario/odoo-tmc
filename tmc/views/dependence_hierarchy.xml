<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <!-- WINDOW ACTION -->
    <record model="ir.actions.act_window"
            id="dependence_hierarchy_list_action">
        <field name="name">Dependences Hierarchy</field>
        <field name="res_model">tmc.dependence_hierarchy</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree,form</field>
        <field name="context">
            { 'search_default_filter_actual_period': True, 'search_default_group_by_parent_id': True}
        </field>
        <field name="domain">[('parent_id', '!=', False), (u'parent_id', u'not ilike', u'ADMINISTRACI\xd3N CENTRAL')]</field>
    </record>

    <!-- TREE VIEW -->
    <record id="view_tmc_dependence_hierarchy_tree"
            model="ir.ui.view">
        <field name="name">tmc.dependence_hierarchy.tree</field>
        <field name="model">tmc.dependence_hierarchy</field>
        <field name="arch"
               type="xml">
            <tree>
                <field name="code" />
                <field name="name" />
                <field name="abbreviation" />
                <field name="institutional_classifier_ids" />
            </tree>
        </field>
    </record>

    <!-- SEARCH VIEW -->
    <record model="ir.ui.view"
            id="dependence_hierarchy_filter_view">
        <field name="name">tmc.dependence_hierarchy.filter</field>
        <field name="model">tmc.dependence_hierarchy</field>
        <field name="arch"
               type="xml">
            <search>
                <field name="code" />
                <field name="name" />
                <field name="abbreviation" />
                <field name="institutional_classifier_ids" />
                <group string="Group By">
                    <filter name="group_by_parent_id"
                            string="Institutional Unit"
                            context="{'group_by': 'parent_id'}" />
                </group>
                <filter string="Actual Period"
                        name="filter_actual_period"
                        domain="[('institutional_classifier_ids', 'ilike', (context_today().strftime('%%Y')))]" />
            </search>
        </field>
    </record>


</odoo>
